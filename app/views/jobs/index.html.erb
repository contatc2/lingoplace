<div class="text-center my-3">
  <h2>List of missions</h2>
  <div
  id="map"
  class='my-3'
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
  <div class="cards-grid my-5 p-2" style="height:95%;">
    <% @jobs.each do |job| %>
      <div class="card-job text-center">
        <%= link_to job.name, job_path(job) %>
        <p><%= job.language.name %></p>
        <p>Description: <%= job.description %></p>
        <p>Price: <%= job.budget %> USD </p>
      </div>
    <% end %>
  </div>
  <!-- Add a new job -->
  <%= link_to "Add new translation mission", new_job_path, class: 'btn btn-primary mr-5' %>
  <!-- Go back to your profile -->
  <%= link_to "Back to my profile",edit_user_registration_path(@user), class: 'btn btn-primary' %>
</div>