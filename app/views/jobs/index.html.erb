<div class="text-center my-3">
  <h1>List of missions</h1>
  <div
  id="map"
  class='my-3'
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
  <div class="cards-grid my-5 p-2" style="height:95%;">
    <% @jobs.each do |job| %>
      <div data-job-id="<%= job.id %>" class="card-job text-center">
        <h4><%= job.name %></h4>
        <p><%= job.language.name %></p>
        <p>Description: <%= job.description %></p>
        <p>Price: <%= job.budget %> USD </p>
        <%= link_to 'see mission',job_path(job), {class: 'job-link'}  %> |
        <%= link_to 'delete mission', job_path(job), method: :delete,
                          data: { confirm: "Are you sure?" }, class: 'job-link', remote: true %>
      </div>
    <% end %>
  </div>
  <!-- Add a new job -->
  <%= link_to "Add new translation mission", new_job_path, class: 'btn btn-primary mr-5' %>
  <!-- Go back to your profile -->
  <%= link_to "Back to my profile",edit_user_registration_path(@user), class: 'btn btn-primary' %>
</div>