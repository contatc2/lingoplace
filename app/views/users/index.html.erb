<h1>Find the best interpreter for the job</h1>
<div class="cards">
  <% @users.each do |user| %>
    <% if user.interpreter = true %>
      <div class="col-sm-3">
        <%= link_to user_path(user) do %>
          <div class="card" style="background-image: url(<%="#{user.picture}"%>)">
            <div div class="card-text">
              <p><%= user.first_name %>&nbsp;</p>
              <p><%= user.last_name %></p>
              <p><% user.email %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end  %>
  <% end %>
</div>
</br>
</br>

<!-- Go back to your profile -->

<%= link_to "Back to my profile",edit_user_registration_path(@user) %>

